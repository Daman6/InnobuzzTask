<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ContentFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title:"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/mtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bodyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleLayout"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body:"
                    android:layout_below="@+id/title"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/mbody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/title"
                    android:layout_toEndOf="@+id/body"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bodyLayout"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id:"
                    android:layout_below="@+id/title"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/title"
                    android:layout_toEndOf="@+id/body"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userIdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idLayout"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/UserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserId:"
                    android:layout_below="@+id/title"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/mUserid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/title"
                    android:layout_toEndOf="@+id/body"
                    android:textSize="24dp"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/allowPermissionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Allow Permission for accessibilty service" />


        </RelativeLayout>

    </FrameLayout>
</layout>